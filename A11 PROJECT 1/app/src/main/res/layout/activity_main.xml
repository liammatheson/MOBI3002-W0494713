<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.example.liamstvremote.MainActivity">

    <!-- Title at the top -->

    <!-- Status Text - CRITICAL for Java code to find -->

    <!-- Power Button (Top Left) -->
    <ImageButton
        android:id="@+id/btn_power"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="48dp"
        android:backgroundTint="#f44336"
        android:contentDescription="Power"
        android:padding="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_lock_power_off"
        app:tint="@android:color/white"
        tools:layout_editor_absoluteY="148dp" />

    <!-- Input Button (Top Right) -->
    <ImageButton
        android:id="@+id/btn_input"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#2196F3"
        android:contentDescription="Input"
        android:padding="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size"
        app:tint="@android:color/white"
        tools:layout_editor_absoluteY="148dp" />

    <!-- Channel Controls (Left Side) -->
    <TextView
        android:id="@+id/lbl_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CH"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/btn_channel_up"
        app:layout_constraintStart_toStartOf="@id/btn_channel_up"
        app:layout_constraintEnd_toEndOf="@id/btn_channel_up" />

    <ImageButton
        android:id="@+id/btn_channel_up"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:backgroundTint="#607d8b"
        android:contentDescription="Channel Up"
        app:srcCompat="@android:drawable/arrow_up_float"
        app:tint="@android:color/white"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/btn_power"
        app:layout_constraintStart_toStartOf="@id/btn_power"
        app:layout_constraintEnd_toEndOf="@id/btn_power" />

    <ImageButton
        android:id="@+id/btn_channel_down"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:backgroundTint="#607d8b"
        android:contentDescription="Channel Down"
        app:srcCompat="@android:drawable/arrow_down_float"
        app:tint="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_channel_up"
        app:layout_constraintStart_toStartOf="@id/btn_channel_up"
        app:layout_constraintEnd_toEndOf="@id/btn_channel_up" />

    <!-- Volume Controls (Right Side) -->
    <TextView
        android:id="@+id/lbl_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOL"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/btn_volume_up"
        app:layout_constraintStart_toStartOf="@id/btn_volume_up"
        app:layout_constraintEnd_toEndOf="@id/btn_volume_up" />

    <ImageButton
        android:id="@+id/btn_volume_up"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:backgroundTint="#607d8b"
        android:contentDescription="Volume Up"
        app:srcCompat="@android:drawable/arrow_up_float"
        app:tint="@android:color/white"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/btn_input"
        app:layout_constraintStart_toStartOf="@id/btn_input"
        app:layout_constraintEnd_toEndOf="@id/btn_input" />

    <ImageButton
        android:id="@+id/btn_volume_down"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:backgroundTint="#607d8b"
        android:contentDescription="Volume Down"
        app:srcCompat="@android:drawable/arrow_down_float"
        app:tint="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_volume_up"
        app:layout_constraintStart_toStartOf="@id/btn_volume_up"
        app:layout_constraintEnd_toEndOf="@id/btn_volume_up" />


</androidx.constraintlayout.widget.ConstraintLayout>