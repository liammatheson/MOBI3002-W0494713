<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityCalculator">

    <EditText
        android:layout_margin="8dp"
        android:id="@+id/editText_field_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/editText_field_2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_margin="8dp"
        android:id="@+id/editText_field_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@id/editText_field_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/b_Add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Add"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/plus"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/b_Subtract"
        app:layout_constraintBottom_toTopOf="@id/b_Divide"
        app:layout_constraintTop_toBottomOf="@id/editText_field_1" />

    <Button
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/b_Subtract"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Subtract"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/minus"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@id/b_Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/b_Divide"
        app:layout_constraintTop_toBottomOf="@id/editText_field_2" />

    <Button
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/b_Divide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Divide"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/divide"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/b_Multiply"
        app:layout_constraintBottom_toTopOf="@id/editTextNumAns"
        app:layout_constraintTop_toBottomOf="@id/b_Add" />

    <Button
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/b_Multiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Multiply"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/multiply"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@id/b_Divide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editTextNumAns"
        app:layout_constraintTop_toBottomOf="@id/b_Subtract" />

    <EditText
        android:layout_margin="8dp"
        android:id="@+id/editTextNumAns"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/graphic"
        app:layout_constraintTop_toBottomOf="@id/b_Divide" />

    <ImageView
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/editTextNumAns"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/graphic"
        android:src="@drawable/graphic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>